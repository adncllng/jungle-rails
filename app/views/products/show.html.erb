<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">


      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    <div class="row">
      <dl class="dl-horizontal">
        <%= render partial: "rating", collection: @ratings %>
      </dl>
    </div>
  </article>
<%if current_user%>
<div class= "row">
  <div class="col-sm-8">
       <h2>Review:</h2>
       <%= form_for Rating.new(product: @product), url: product_reviews_path(@product) do |f| %>
         <p>
           <%= f.label :rating %>
           <%= f.select :rating, [0,1,2,3,4], :prompt => 'Select One' %>
         </p>
         <p>
           <%= f.label :description %>
           <%= f.text_area :description%>
         </p>
         <%= f.submit "Submit", class: 'btn btn-primary'%>
       <% end %>
     </div>
   </div>
   <%end%>


</section>
